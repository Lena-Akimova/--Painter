@model List<Order>

@{
    ViewBag.Title = "Мои заказы";
}

<div class="bask_content">
    <div class="table_bask">
        <div class="bask_table">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="prod_row">
                    <div class="inf_prod_td">
                        <div>
                            <span class="name_prod">Заказ №@Model[i].o_code</span>
                            <span>Дата заказа: @Model[i].o_date </span>
                            <span>Тип доставки: @Model[i].o_delivery </span>
                        </div>
                    </div>
                    <div class="inf_prod_td">
                        <div>
                            <span class="name_prod">Товаров @ViewBag.Counts[i] шт.</span>
                            <span>Сумма заказа:  @ViewBag.Sums[i] руб. </span>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    @if (Model.Count == 0)
    {
        <div class="total_box">
            <div id="empty_bask">
                <span style="color: darkgray; font: 17px; font-family: 'Conv_AmaticSC-Regular';"> У вас пока нет заказов :( </span>
                <br />
                <a asp-action="Browse" asp-controller="Store"> Отправиться за покупками </a>
            </div>
           
        </div>
    }
    </div>