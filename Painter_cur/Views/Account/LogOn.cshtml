
@model LogOnModel

@{
    ViewBag.Title = "Вход";
}



<form class="log_form" asp-action="LogOn" asp-controller="Account" method="post" >
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div style="color:#0094ff;">@ViewData["mes"]</div>
        <div class="form-group">
            <div class="lab">
                <label>Введите логин</label>
            </div>
            <input type="text" asp-for="UserLogin" />
        </div>
        <div class="form-group">
            <div class="lab">
                <label>Введите пароль</label>
            </div>
            <input asp-for="Password" />
        </div>
        <div class="form-group">
            <button type="submit" value="Войти" class="create_but">Войти</button>
            <br />
            <a asp-action="Register" asp-controller="Account">Регистрация</a>
        </div>
    </div>
</form>

